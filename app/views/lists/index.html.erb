
<%= provide :title, "" %>
<%= provide :button, "lists/new_list_button" %>

<h1>All Lists</h1>

<ul class="list-group">
	<% @lists.each do |list| %>
			<a href="<%= list_path list %>" class="button--anchor">
			<li class="list-group-item li--hover">
				<div class="row">
					<span class="col-sm-6">
						<%= list.name %>
					</span>
					<span class="col-sm-6 pull-right text-right">
						<%= list.created_at.strftime "%d. %B '%y" %>
					</span>
				</div>
			</li>
		</a>
	<% end %>
</ul>

